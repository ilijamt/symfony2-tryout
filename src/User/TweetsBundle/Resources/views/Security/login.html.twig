{% extends "::base.html.twig" %}

{% block title %} Login {% endblock %}

{% block body %}

{% if error %}
<div>{{ error.message }}</div>
{% endif %}

<div class="container">
    <div class="row vertical-center-row">
        <div class="col-lg-12">
            <div class="row ">
                <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4">
{{ form_start(form, { 'style': 'horizontal', 'action': path('login_check'), 'attr': {'class' : 'form-login'} }) }}
    {{ form_row(form.username) }}
    {{ form_row(form.password) }}

                    <div class="form-group">
                        <span class="control-label col-lg-2"></span>
                        <div class="col-lg-10"><a class="btn btn-danger" type="button" href="{{ path("user_new") }}">Create a new user</a></div>
                    </div>                    

{{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
