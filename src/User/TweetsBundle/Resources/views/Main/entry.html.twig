<div class="panel panel-default" id="tweet{{ entry.id }}" date-time="{{ entry.updated|date('U') }}">

       {% if app.user and app.user.id == entry.getUserLink.id %}
    <div class="panel-heading text-right">
        <button type="button" class="btn-edit-tweet btn btn-default btn-mid" data-id="{{ entry.id }}" data-target="tweet{{ entry.id }}">
            <span class="glyphicon glyphicon-edit" title="Edit"></span>
        </button>
        <button type="button" class="btn-delete-tweet btn btn-default btn-sm" data-id="{{ entry.id }}" data-target="tweet{{ entry.id }}">
            <span class="glyphicon glyphicon-trash" title="Delete"></span>
        </button>
    </div>
       {% endif %}

    <div class="panel-body">
        <p>{{ entry.entry }}</p>
    </div>
    {% if entry.created == entry.updated %}
    <div class="panel-footer text-right">Created by {{ entry.name }} on {{ entry.created|date('Y-m-d H:i:s') }}</div>
    {% else %}
    <div class="panel-footer text-right">Created by {{ entry.name }} on {{ entry.created|date('Y-m-d H:i:s') }} (Last update: {{ entry.updated|date('Y-m-d H:i:s') }})</div>    
    {% endif %}
</div>